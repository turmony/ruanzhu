/* pages/analysis/analysis.wxss */

.container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #ffffff 100%);
}

/* 加载状态 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.95);
  z-index: 1000;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f0f0f0;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.loading-progress {
  width: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #1890ff 0%, #52c41a 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
}

/* 主内容 */
.main-content {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* Tab切换 */
.tab-container {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 0;
  cursor: pointer;
  transition: all 0.3s;
}

.tab-icon {
  font-size: 48rpx;
  opacity: 0.6;
  transition: all 0.3s;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.tab-item.active .tab-icon {
  opacity: 1;
  transform: scale(1.1);
}

.tab-item.active .tab-text {
  color: #1890ff;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background: linear-gradient(90deg, #1890ff 0%, #52c41a 100%);
  border-radius: 2rpx;
}

/* 内容滚动区 */
.content-scroll {
  flex: 1;
  height: calc(100vh - 180rpx);
}

.analysis-section {
  padding: 24rpx;
}

/* 图表卡片 */
.chart-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

.header-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.card-subtitle {
  font-size: 24rpx;
  color: #999;
}

/* 图表容器 */
.chart-wrapper {
  width: 100%;
  height: 400rpx;
}

.chart-tall {
  height: 500rpx;
}

.chart-extra-tall {
  height: 600rpx;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

/* 洞察卡片 */
.insight-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.insight-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.insight-icon {
  font-size: 48rpx;
}

.insight-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
}

.insight-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.insight-item {
  display: flex;
  gap: 12rpx;
  align-items: flex-start;
}

.insight-bullet {
  color: #fff;
  font-size: 32rpx;
  line-height: 1.5;
}

.insight-text {
  flex: 1;
  color: rgba(255, 255, 255, 0.95);
  font-size: 28rpx;
  line-height: 1.6;
}

/* 聚类容器 */
.cluster-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.cluster-item {
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.cluster-header {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cluster-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
}

.cluster-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.cluster-stats {
  background: #fff;
  padding: 24rpx;
  display: flex;
  gap: 32rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 模式容器 */
.pattern-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.pattern-item {
  border: 2rpx solid #f0f0f0;
  border-radius: 16rpx;
  overflow: hidden;
}

.pattern-header {
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: #fafafa;
}

.pattern-icon {
  font-size: 48rpx;
}

.pattern-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.pattern-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.pattern-desc {
  font-size: 24rpx;
  color: #999;
}

.pattern-count {
  font-size: 28rpx;
  color: #1890ff;
  font-weight: 600;
}

.pattern-chart-mini {
  width: 100%;
  height: 200rpx;
  padding: 24rpx;
  background: #fff;
}

.pattern-stations {
  padding: 24rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  background: #fff;
  border-top: 1rpx solid #f0f0f0;
}

.station-tag {
  padding: 8rpx 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
}
