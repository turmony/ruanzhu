/* miniprogram/pages/pattern-recognition/pattern-recognition.wxss */

page {
  background: linear-gradient(180deg, #f8f9fe 0%, #ffffff 100%);
}

.container {
  min-height: 100vh;
  padding: 20rpx 20rpx 60rpx;
}

/* ========== 页面头部 ========== */
.page-header {
  position: relative;
  margin-bottom: 40rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.2);
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  opacity: 1;
}

.header-content {
  position: relative;
  padding: 50rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: float 3s ease-in-out infinite;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.header-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  letter-spacing: 1rpx;
}

/* ========== 章节标题 ========== */
.section-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  gap: 16rpx;
}

.header-line {
  width: 60rpx;
  height: 3rpx;
  background: linear-gradient(90deg, transparent, #667eea, transparent);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #262626;
  position: relative;
}

/* ========== 统计卡片区域 ========== */
.stats-section {
  margin-bottom: 40rpx;
}

.pattern-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.pattern-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 6rpx solid;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.pattern-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.12);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-icon {
  width: 70rpx;
  height: 70rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.card-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #262626;
  margin-bottom: 6rpx;
}

.card-count {
  font-size: 24rpx;
  color: #8c8c8c;
}

.card-features {
  font-size: 22rpx;
  color: #52c41a;
  margin-top: 4rpx;
  font-style: italic;
}

.expand-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 8rpx;
}

.expand-icon text {
  font-size: 32rpx;
  color: #8c8c8c;
  transition: transform 0.3s ease;
  display: inline-block;
}

.expand-icon .expanded {
  transform: rotate(90deg);
}

.expanded-content {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  animation: slideDown 0.3s ease-out;
}

.chart-wrapper {
  background-color: #fafafa;
  border-radius: 12rpx;
  padding: 20rpx;
}

.chart-container-pattern {
  width: 100%;
  height: 500rpx;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}

.chart-container-pattern ec-canvas {
  width: 100%;
  height: 100%;
}

.chart-tip {
  margin-top: 16rpx;
  text-align: center;
}

.tip-text {
  font-size: 22rpx;
  color: #8c8c8c;
  font-style: italic;
}

.card-percent {
  display: flex;
  align-items: center;
}

.percent-value {
  font-size: 36rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.card-progress {
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  animation: progressFill 1s ease-out;
}

/* ========== 图表区域 ========== */
.chart-section {
  margin-bottom: 40rpx;
}

.chart-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx 12rpx; /* 减少内边距，增大图表可用宽度 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 24rpx;
}

.chart-container {
  width: 100%;
  height: 700rpx; /* 调整为更平衡的高宽比 */
}

ec-canvas {
  width: 100%;
  height: 100%;
}

/* ========== 模式说明 ========== */
.pattern-description {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.desc-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.desc-item:last-child {
  border-bottom: none;
}

.desc-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.desc-text {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.desc-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #262626;
  margin-bottom: 4rpx;
}

.desc-detail {
  font-size: 24rpx;
  color: #8c8c8c;
  line-height: 1.5;
}

/* ========== 站点分类区域 ========== */
.stations-section {
  margin-bottom: 40rpx;
}

.pattern-groups {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.group-wrapper {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.group-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
}

.group-title {
  display: flex;
  align-items: center;
}

.group-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.group-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #262626;
}

.group-badge {
  min-width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 16rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
}

.stations-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding: 20rpx 24rpx;
  background-color: #fafafa;
}

.station-tag {
  padding: 12rpx 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  border: 2rpx solid;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.station-tag:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.station-name {
  white-space: nowrap;
}

/* ========== 算法说明 ========== */
.algorithm-section {
  margin-bottom: 40rpx;
}

.algorithm-card {
  background: linear-gradient(135deg, #667eea08, #764ba208);
  border-radius: 16rpx;
  padding: 32rpx;
  border: 2rpx solid #667eea20;
}

.algorithm-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.algorithm-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.algorithm-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #262626;
}

.algorithm-content {
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  padding: 24rpx;
}

.algorithm-text {
  font-size: 26rpx;
  color: #595959;
  line-height: 2;
  text-align: justify;
  text-indent: 2em;
}

/* ========== 动画 ========== */
@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

@keyframes progressFill {
  from {
    transform: scaleX(0);
    transform-origin: left;
  }
  to {
    transform: scaleX(1);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.pattern-card,
.chart-card,
.pattern-description,
.group-wrapper,
.algorithm-card {
  animation: fadeIn 0.5s ease-out backwards;
}

.pattern-card:nth-child(1) { animation-delay: 0.1s; }
.pattern-card:nth-child(2) { animation-delay: 0.2s; }
.pattern-card:nth-child(3) { animation-delay: 0.3s; }
.pattern-card:nth-child(4) { animation-delay: 0.4s; }
.pattern-card:nth-child(5) { animation-delay: 0.5s; }
.chart-card { animation-delay: 0.6s; }