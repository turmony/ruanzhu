/* pages/index/index.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #ffffff 100%);
  padding-bottom: 40rpx;
}

/* 导航栏样式 */
.nav-bar {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 数据概览区域 */
.overview-section {
  padding: 30rpx;
}

.section-title {
  margin-bottom: 20rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle-text {
  font-size: 24rpx;
  color: #999999;
  display: block;
}

/* 统计卡片网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-top: 20rpx;
}

.stat-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.stat-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.stat-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.stat-icon image {
  width: 100%;
  height: 100%;
}

.stat-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.stat-value {
  font-size: 44rpx;
  font-weight: bold;
  color: #667eea;
  line-height: 1.2;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* 地图展示区域 */
.map-section {
  padding: 30rpx;
  padding-top: 0;
}

.map-legend {
  display: flex;
  justify-content: flex-end;
  margin-top: 15rpx;
  flex-wrap: wrap;
}

.legend-item {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.legend-color.low {
  background-color: #52c41a;
}

.legend-color.medium {
  background-color: #faad14;
}

.legend-color.high {
  background-color: #ff7a45;
}

.legend-color.very-high {
  background-color: #f5222d;
}

.legend-item text {
  font-size: 22rpx;
  color: #666666;
}

/* 地图样式 */
.station-map {
  width: 100%;
  height: 700rpx;
  border-radius: 16rpx;
  margin-top: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 地图控件 */
.map-controls {
  position: absolute;
  right: 20rpx;
  bottom: 80rpx;
  display: flex;
  flex-direction: column;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  background: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 20rpx;
}

.control-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 站点信息弹窗 */
.station-info-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.popup-content {
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  animation: popup-in 0.3s ease;
}

@keyframes popup-in {
  from {
    opacity: 0;
    transform: translateY(-40%) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(-50%) scale(1);
  }
}

.popup-header {
  padding: 40rpx 30rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
}

.station-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.close-btn {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-btn text {
  font-size: 48rpx;
  color: #ffffff;
  line-height: 1;
}

.popup-body {
  padding: 30rpx;
}

.info-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
  width: 180rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
  font-weight: 500;
}

.info-value.highlight {
  color: #667eea;
  font-weight: bold;
  font-size: 32rpx;
}

.demand-level-1 {
  color: #52c41a;
}

.demand-level-2 {
  color: #faad14;
}

.demand-level-3 {
  color: #ff7a45;
}

.demand-level-4 {
  color: #f5222d;
}

.popup-footer {
  padding: 20rpx 30rpx 30rpx;
}

.detail-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 快捷入口区域 */
.quick-access-section {
  padding: 30rpx;
  padding-top: 0;
}

.quick-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-top: 20rpx;
}

.quick-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.quick-card:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.quick-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.quick-icon.hot {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
}

.quick-icon.insight {
  background: linear-gradient(135deg, #feca57 0%, #ff9ff3 100%);
}

.quick-icon.analysis {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.quick-icon.favorites {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.quick-icon.trends {
  background: linear-gradient(135deg, #4bc0c8 0%, #c779d0 100%);
}

.icon-text {
  font-size: 48rpx;
}

.quick-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.quick-subtitle {
  font-size: 22rpx;
  color: #999999;
}

/* 最近查看区域 */
.recent-section {
  padding: 30rpx;
  padding-top: 0;
}

.more-btn {
  float: right;
  font-size: 24rpx;
  color: #667eea;
}

.recent-scroll {
  white-space: nowrap;
  margin-top: 20rpx;
}

.recent-item {
  display: inline-block;
  background: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  min-width: 200rpx;
  vertical-align: top;
}

.recent-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 15rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
}

.recent-name {
  display: block;
  font-size: 26rpx;
  color: #333333;
  text-align: center;
  margin-bottom: 8rpx;
  white-space: normal;
}

.recent-time {
  display: block;
  font-size: 20rpx;
  color: #999999;
  text-align: center;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f0f0f0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666666;
}
